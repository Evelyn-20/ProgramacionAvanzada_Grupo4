@model Pasteleria.Models.CategoriaFormVM
@{
    ViewData["Title"] = "Editar categoría";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h4 class="mb-0">Editar categoría</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdCategoria" />

                <div class="mb-3">
                    <label asp-for="NombreCategoria" class="form-label"></label>
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Estado" class="form-check-input" />
                    <label asp-for="Estado" class="form-check-label">Activo</label>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a asp-action="ListadoCategorias" class="btn btn-outline-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}