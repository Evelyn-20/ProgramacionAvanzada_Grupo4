<!-- Modal Detalles Categoría -->
<div class="modal fade" id="modalDetallesCategoria" tabindex="-1" aria-labelledby="modalDetallesCategoriaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="border: none; border-radius: 15px; overflow: hidden; box-shadow: var(--shadow-lg);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: var(--white); border: none; padding: 1.5rem 2rem;">
                <h5 class="modal-title" id="modalDetallesCategoriaLabel" style="font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-tag"></i> Detalles de la Categoría
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2rem; background: var(--white);">
                <!-- Título de la Categoría -->
                <div style="background: var(--light-color); padding: 1.5rem; border-radius: 10px; margin-bottom: 1.5rem; border-left: 4px solid #3498db;">
                    <h5 id="detalles-nombre" style="color: var(--dark-color); margin: 0; font-size: 1.5rem;"></h5>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem;">
                    <!-- Columna Izquierda - Información -->
                    <div>
                        <div style="display: grid; gap: 1.2rem;">
                            <!-- ID -->
                            <div>
                                <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.3rem; letter-spacing: 0.5px;">
                                    <i class="fas fa-hashtag" style="color: var(--primary-color); margin-right: 0.5rem;"></i> ID
                                </label>
                                <p id="detalles-id" style="color: var(--dark-color); font-size: 1.1rem; margin: 0;"></p>
                            </div>

                            <!-- Estado -->
                            <div>
                                <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.3rem; letter-spacing: 0.5px;">
                                    <i class="fas fa-toggle-on" style="color: var(--primary-color); margin-right: 0.5rem;"></i> Estado
                                </label>
                                <span id="detalles-estado-badge" class="badge" style="font-size: 0.9rem; padding: 0.5rem 1rem; display: inline-block;"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Columna Derecha - Imagen -->
                    <div>
                        <!-- Imagen -->
                        <div>
                            <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.8rem; letter-spacing: 0.5px;">
                                <i class="fas fa-image" style="color: var(--primary-color); margin-right: 0.5rem;"></i> Imagen
                            </label>
                            <img id="detalles-imagen"
                                 src=""
                                 alt="Imagen de la categoría"
                                 style="width: 100%; height: 250px; border-radius: 10px; box-shadow: var(--shadow); object-fit: cover; display: block;">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--light-color); border: none; padding: 1.5rem 2rem;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-times"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>