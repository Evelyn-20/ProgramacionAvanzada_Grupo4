<!-- Modal Detalles Usuario -->
<div class="modal fade" id="modalDetallesUsuario" tabindex="-1" aria-labelledby="modalDetallesUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="border: none; border-radius: 15px; overflow: hidden; box-shadow: var(--shadow-lg);">
            <!-- Header -->
            <div class="modal-header" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: var(--white); border: none; padding: 1.5rem 2rem;">
                <h5 class="modal-title" id="modalDetallesUsuarioLabel" style="font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-user-circle"></i> Detalles del Usuario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 2rem; background: var(--white);">
                <div style="background: var(--light-color); padding: 1.5rem; border-radius: 10px; margin-bottom: 1.5rem; border-left: 4px solid #3498db;">
                    <h5 id="detalles-nombre" style="color: var(--dark-color); margin: 0; font-size: 1.5rem; font-weight: 600;"></h5>
                </div>

                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
                    <!-- Columna 1 -->
                    <div>
                        <div style="margin-bottom: 1.5rem;">
                            <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-hashtag" style="color: var(--primary-color); width: 20px;"></i> ID Usuario
                            </label>
                            <p id="detalles-id" style="color: var(--dark-color); font-size: 1.1rem; margin: 0; padding-left: 26px; font-weight: 500;"></p>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-envelope" style="color: var(--primary-color); width: 20px;"></i> Email
                            </label>
                            <p id="detalles-email" style="color: var(--dark-color); font-size: 1rem; margin: 0; padding-left: 26px; word-break: break-word;"></p>
                        </div>
                    </div>

                    <!-- Columna 2 -->
                    <div>
                        <div style="margin-bottom: 1.5rem;">
                            <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-user-tag" style="color: var(--primary-color); width: 20px;"></i> Rol Asignado
                            </label>
                            <div style="padding-left: 26px;">
                                <span id="detalles-rol" style="background: var(--primary-color); color: var(--white); padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.9rem; font-weight: 600; display: inline-block;"></span>
                            </div>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <label style="display: block; color: var(--text-color); font-size: 0.85rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 0.5px;">
                                <i class="fas fa-toggle-on" style="color: var(--primary-color); width: 20px;"></i> Estado
                            </label>
                            <div style="padding-left: 26px;">
                                <span id="detalles-estado-badge" class="badge" style="font-size: 0.9rem; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600;"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información adicional -->
                <div style="margin-top: 1.5rem; padding: 1rem; background: #f8f9fa; border-radius: 10px; border-left: 4px solid var(--primary-color);">
                    <p style="margin: 0; color: var(--text-color); font-size: 0.9rem;">
                        <i class="fas fa-info-circle" style="color: var(--primary-color); margin-right: 0.5rem;"></i>
                        Este usuario tiene acceso al sistema con los permisos correspondientes a su rol asignado.
                    </p>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer" style="background: var(--light-color); border: none; padding: 1.5rem 2rem;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-times"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>