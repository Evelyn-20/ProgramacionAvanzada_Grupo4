@model List<Pasteleria.Abstracciones.ModeloUI.CarritoItem>

@{
    ViewData["Title"] = "Carrito de Compras";
    decimal subtotal = 0;
    decimal impuesto = 0;
    decimal descuento = 0;
    decimal total = 0;

    if (Model != null && Model.Count > 0)
    {
        subtotal = Model.Sum(item => item.Subtotal);
        descuento = Model.Sum(item => item.Descuento);
        impuesto = subtotal * 0.13m; // 13% de IVA
        total = subtotal - descuento + impuesto;
    }
}

<!-- Banner Hero -->
<section class="hero" style="padding: 3rem 0;">
    <div class="hero-content">
        <h1 class="hero-title">Carrito de Compras</h1>
        <p class="hero-subtitle">Selecciona y gestiona los productos antes de realizar la compra</p>
    </div>
</section>

<div class="container" style="padding: 3rem 20px; max-width: 1400px;">
    <!-- Mensajes de éxito/error -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 10px; margin-bottom: 2rem;">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px; margin-bottom: 2rem;">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div style="display: grid; grid-template-columns: 1fr 400px; gap: 2rem; align-items: start;">
            <!-- Sección de Productos -->
            <div style="background: var(--white); border-radius: 15px; box-shadow: var(--shadow); padding: 2rem;">
                <h2 style="color: var(--dark-color); margin-bottom: 2rem; font-family: 'Playfair Display', serif; font-size: 1.8rem;">
                    <i class="fas fa-shopping-basket"></i> Productos
                </h2>

                <div id="productosCarrito">
                    @foreach (var item in Model)
                    {
                        <div class="producto-carrito" style="display: flex; gap: 1.5rem; padding: 1.5rem; border-bottom: 2px solid var(--secondary-color); align-items: center;">
                            <div style="width: 100px; height: 100px; border-radius: 10px; overflow: hidden; flex-shrink: 0;">
                                <img src="@Url.Action("ObtenerImagenProducto", "Producto", new { id = item.IdProducto })"
                                     alt="@item.NombreProducto"
                                     style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <div style="flex: 1;">
                                <h4 style="color: var(--dark-color); margin-bottom: 0.5rem; font-weight: 600;">@item.NombreProducto</h4>
                                <p style="color: var(--text-color); margin-bottom: 0.5rem; font-size: 0.9rem;">@item.NombreCategoria</p>
                                <p style="color: var(--text-color); margin-bottom: 0.5rem; font-size: 0.85rem;">Precio unitario: ₡@item.Precio.ToString("N2")</p>

                                <form method="post" action="@Url.Action("ActualizarCantidad", "Carrito")" style="display: flex; align-items: center; gap: 1rem; margin-top: 1rem;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="IdProducto" value="@item.IdProducto" />

                                    <button type="submit" name="accion" value="disminuir" class="btn-cantidad" style="width: 35px; height: 35px; border-radius: 50%; background: var(--secondary-color); border: none; color: var(--dark-color); font-weight: 600; cursor: pointer; transition: all 0.3s;">
                                        -
                                    </button>
                                    <input type="number" name="Cantidad" value="@item.Cantidad" min="1" readonly
                                           style="width: 60px; text-align: center; border: 2px solid var(--secondary-color); border-radius: 8px; padding: 0.5rem; font-weight: 600;">
                                    <button type="submit" name="accion" value="aumentar" class="btn-cantidad" style="width: 35px; height: 35px; border-radius: 50%; background: var(--secondary-color); border: none; color: var(--dark-color); font-weight: 600; cursor: pointer; transition: all 0.3s;">
                                        +
                                    </button>
                                </form>
                            </div>
                            <div style="text-align: right; display: flex; flex-direction: column; align-items: flex-end; gap: 1rem;">
                                <span style="color: var(--primary-color); font-weight: 700; font-size: 1.3rem;">₡@item.Subtotal.ToString("N2")</span>

                                <form method="post" action="@Url.Action("EliminarDelCarrito", "Carrito")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="IdProducto" value="@item.IdProducto" />
                                    <button type="submit" class="btn-eliminar-producto" style="width: 40px; height: 40px; border-radius: 50%; background: #e74c3c; border: none; color: var(--white); cursor: pointer; transition: all 0.3s;">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Resumen del Pedido -->
            <div style="background: var(--white); border-radius: 15px; box-shadow: var(--shadow); padding: 2rem; position: sticky; top: 100px;">
                <h3 style="color: var(--dark-color); margin-bottom: 1.5rem; font-family: 'Playfair Display', serif; font-size: 1.5rem;">
                    Resumen del Pedido
                </h3>

                <div style="margin-bottom: 2rem;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid var(--secondary-color);">
                        <span style="color: var(--text-color);">Subtotal:</span>
                        <span style="color: var(--dark-color); font-weight: 600;">₡@subtotal.ToString("N2")</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid var(--secondary-color);">
                        <span style="color: var(--text-color);">Descuento:</span>
                        <span style="color: #27ae60; font-weight: 600;">₡@descuento.ToString("N2")</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 2px solid var(--secondary-color);">
                        <span style="color: var(--text-color);">Impuesto (13%):</span>
                        <span style="color: var(--dark-color); font-weight: 600;">₡@impuesto.ToString("N2")</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
                        <span style="color: var(--dark-color); font-weight: 700; font-size: 1.2rem;">Total:</span>
                        <span style="color: var(--primary-color); font-weight: 700; font-size: 1.5rem;">₡@total.ToString("N2")</span>
                    </div>
                </div>

                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <a href="@Url.Action("FinalizacionCompra", "Carrito")" class="btn btn-primary" style="width: 100%; padding: 1rem; font-size: 1.1rem; text-align: center; text-decoration: none;">
                        <i class="fas fa-credit-card"></i> Proceder al Pago
                    </a>
                    <a href="@Url.Action("Index", "Catalogo")" class="btn btn-secondary" style="width: 100%; padding: 1rem; font-size: 1.1rem; text-align: center; text-decoration: none;">
                        <i class="fas fa-arrow-left"></i> Continuar Comprando
                    </a>

                    <form method="post" action="@Url.Action("VaciarCarrito", "Carrito")" style="margin-top: 0.5rem;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn" style="width: 100%; padding: 1rem; font-size: 1rem; background: transparent; color: #e74c3c; border: 2px solid #e74c3c; border-radius: 50px; cursor: pointer; transition: all 0.3s;">
                            <i class="fas fa-trash-alt"></i> Vaciar Carrito
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Mensaje cuando no hay productos -->
        <div style="text-align: center; padding: 5rem 2rem; background: var(--white); border-radius: 15px; box-shadow: var(--shadow);">
            <i class="fas fa-shopping-cart" style="font-size: 5rem; color: var(--secondary-color); opacity: 0.5; display: block; margin-bottom: 2rem;"></i>
            <h2 style="color: var(--dark-color); margin-bottom: 1rem; font-family: 'Playfair Display', serif;">Tu carrito está vacío</h2>
            <p style="color: var(--text-color); margin-bottom: 2rem; font-size: 1.1rem;">¡Agrega productos deliciosos a tu carrito!</p>
            <a href="@Url.Action("Index", "Catalogo")" class="btn btn-primary" style="padding: 1rem 3rem; font-size: 1.1rem; text-decoration: none;">
                <i class="fas fa-shopping-bag"></i> Ver Catálogo
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/carrito.js"></script>
}