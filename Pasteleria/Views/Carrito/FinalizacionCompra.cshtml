@model Pasteleria.Abstracciones.ModeloUI.ResumenCompra

@{
    ViewData["Title"] = "Finalización de Compra";
}

<!-- Banner Hero -->
<section class="hero" style="padding: 3rem 0;">
    <div class="hero-content">
        <h1 class="hero-title">Finalización de Compra</h1>
        <p class="hero-subtitle">Proceso para finalizar tu compra</p>
    </div>
</section>

<div class="container" style="padding: 3rem 20px; max-width: 1400px;">
    <!-- Mensajes de éxito/error -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 10px; margin-bottom: 2rem;">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px; margin-bottom: 2rem;">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form method="post" action="@Url.Action("ProcesarPago", "Carrito")">
        @Html.AntiForgeryToken()

        <div style="display: grid; grid-template-columns: 1fr 400px; gap: 2rem; align-items: start;">
            <!-- Columna izquierda: Formulario -->
            <div style="display: flex; flex-direction: column; gap: 2rem;">
                <!-- Información de Envío -->
                <div style="background: var(--white); border-radius: 15px; box-shadow: var(--shadow); padding: 2rem;">
                    <h3 style="color: var(--dark-color); margin-bottom: 1.5rem; font-family: 'Playfair Display', serif; font-size: 1.5rem;">
                        <i class="fas fa-shipping-fast"></i> Información de Envío
                    </h3>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div style="grid-column: 1 / -1;">
                            <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                Nombre Completo <span style="color: #e74c3c;">*</span>
                            </label>
                            <input type="text"
                                   name="NombreCompleto"
                                   required
                                   style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s;"
                                   onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                   onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                        </div>

                        <div style="grid-column: 1 / -1;">
                            <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                Correo Electrónico <span style="color: #e74c3c;">*</span>
                            </label>
                            <input type="email"
                                   name="Email"
                                   required
                                   style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s;"
                                   onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                   onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                        </div>

                        <div style="grid-column: 1 / -1;">
                            <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                Dirección Completa <span style="color: #e74c3c;">*</span>
                            </label>
                            <textarea name="Direccion"
                                      required
                                      rows="3"
                                      style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s; resize: vertical;"
                                      onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                      onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'"></textarea>
                        </div>

                        <div>
                            <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                Teléfono <span style="color: #e74c3c;">*</span>
                            </label>
                            <input type="tel"
                                   name="Telefono"
                                   required
                                   placeholder="+506 1234-5678"
                                   style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s;"
                                   onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                   onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                        </div>

                        <div>
                            <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                Ciudad <span style="color: #e74c3c;">*</span>
                            </label>
                            <input type="text"
                                   name="Ciudad"
                                   required
                                   style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s;"
                                   onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                   onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                        </div>

                        <div>
                            <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                Provincia <span style="color: #e74c3c;">*</span>
                            </label>
                            <select name="Provincia"
                                    required
                                    style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; background: var(--white); transition: all 0.3s; cursor: pointer;"
                                    onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                    onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                                <option value="">Selecciona una provincia</option>
                                <option value="San José">San José</option>
                                <option value="Alajuela">Alajuela</option>
                                <option value="Cartago">Cartago</option>
                                <option value="Heredia">Heredia</option>
                                <option value="Guanacaste">Guanacaste</option>
                                <option value="Puntarenas">Puntarenas</option>
                                <option value="Limón">Limón</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Método de Pago -->
                <div style="background: var(--white); border-radius: 15px; box-shadow: var(--shadow); padding: 2rem;">
                    <h3 style="color: var(--dark-color); margin-bottom: 1.5rem; font-family: 'Playfair Display', serif; font-size: 1.5rem;">
                        <i class="fas fa-credit-card"></i> Método de Pago
                    </h3>

                    <!-- Tarjeta de Crédito/Débito -->
                    <div style="border: 2px solid var(--primary-color); border-radius: 10px; padding: 1.5rem; background: var(--light-color);">
                        <label style="display: flex; align-items: center; cursor: pointer; margin-bottom: 1.5rem;">
                            <input type="radio"
                                   name="MetodoPago"
                                   value="Tarjeta"
                                   checked
                                   style="width: 20px; height: 20px; margin-right: 1rem; accent-color: var(--primary-color); cursor: pointer;">
                            <span style="color: var(--dark-color); font-weight: 600; font-size: 1.1rem;">
                                <i class="fas fa-credit-card"></i> Tarjeta de Crédito/Débito
                            </span>
                        </label>

                        <div style="display: grid; gap: 1.5rem;">
                            <div>
                                <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                    Número de tarjeta <span style="color: #e74c3c;">*</span>
                                </label>
                                <input type="text"
                                       name="NumeroTarjeta"
                                       placeholder="1234 5678 9012 3456"
                                       maxlength="19"
                                       required
                                       style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s;"
                                       onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                       onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                            </div>

                            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
                                <div>
                                    <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                        CVV <span style="color: #e74c3c;">*</span>
                                    </label>
                                    <input type="text"
                                           name="CVV"
                                           placeholder="123"
                                           maxlength="3"
                                           required
                                           style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; transition: all 0.3s;"
                                           onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                           onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                                </div>

                                <div>
                                    <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                        Mes <span style="color: #e74c3c;">*</span>
                                    </label>
                                    <select name="MesVencimiento"
                                            required
                                            style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; background: var(--white); transition: all 0.3s; cursor: pointer;"
                                            onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                            onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                                        <option value="">Mes</option>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i.ToString("00")">@i.ToString("00")</option>
                                        }
                                    </select>
                                </div>

                                <div>
                                    <label style="display: block; color: var(--dark-color); font-weight: 600; margin-bottom: 0.5rem;">
                                        Año <span style="color: #e74c3c;">*</span>
                                    </label>
                                    <select name="AñoVencimiento"
                                            required
                                            style="width: 100%; padding: 0.9rem; border: 2px solid var(--secondary-color); border-radius: 10px; font-size: 1rem; background: var(--white); transition: all 0.3s; cursor: pointer;"
                                            onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 4px 12px rgba(212, 130, 92, 0.2)'"
                                            onblur="this.style.borderColor='var(--secondary-color)'; this.style.boxShadow='none'">
                                        <option value="">Año</option>
                                        @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: Resumen del Pedido -->
            <div style="background: var(--white); border-radius: 15px; box-shadow: var(--shadow); padding: 2rem; position: sticky; top: 100px;">
                <h3 style="color: var(--dark-color); margin-bottom: 1.5rem; font-family: 'Playfair Display', serif; font-size: 1.5rem;">
                    Resumen del Pedido
                </h3>

                <!-- Lista de productos -->
                @if (Model != null && Model.Items != null && Model.Items.Count > 0)
                {
                    <div style="margin-bottom: 1.5rem; max-height: 250px; overflow-y: auto;">
                        @foreach (var item in Model.Items)
                        {
                            <div style="display: flex; justify-content: space-between; padding: 0.8rem 0; border-bottom: 1px solid var(--secondary-color);">
                                <span style="color: var(--text-color);">@item.NombreProducto x@item.Cantidad</span>
                                <span style="color: var(--dark-color); font-weight: 600;">₡@item.Subtotal.ToString("N2")</span>
                            </div>
                        }
                    </div>

                    <div style="margin-bottom: 2rem;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid var(--secondary-color);">
                            <span style="color: var(--text-color);">Subtotal:</span>
                            <span style="color: var(--dark-color); font-weight: 600;">₡@Model.Subtotal.ToString("N2")</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid var(--secondary-color);">
                            <span style="color: var(--text-color);">Descuento:</span>
                            <span style="color: #27ae60; font-weight: 600;">₡@Model.Descuento.ToString("N2")</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 2px solid var(--secondary-color);">
                            <span style="color: var(--text-color);">Impuesto (13%):</span>
                            <span style="color: var(--dark-color); font-weight: 600;">₡@Model.Impuesto.ToString("N2")</span>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
                            <span style="color: var(--dark-color); font-weight: 700; font-size: 1.2rem;">Total:</span>
                            <span style="color: var(--primary-color); font-weight: 700; font-size: 1.5rem;">₡@Model.Total.ToString("N2")</span>
                        </div>
                    </div>
                }

                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem; font-size: 1.1rem;">
                        <i class="fas fa-check-circle"></i> Confirmar Pago
                    </button>
                    <a href="@Url.Action("Carrito", "Carrito")" class="btn btn-secondary" style="width: 100%; padding: 1rem; font-size: 1.1rem; text-align: center; text-decoration: none;">
                        <i class="fas fa-arrow-left"></i> Volver al Carrito
                    </a>
                </div>

                <!-- Información de seguridad -->
                <div style="margin-top: 2rem; padding-top: 1.5rem; border-top: 2px solid var(--secondary-color); text-align: center;">
                    <p style="color: var(--text-color); font-size: 0.85rem; margin-bottom: 0.5rem;">
                        <i class="fas fa-lock"></i> Pago 100% seguro
                    </p>
                    <p style="color: var(--text-color); font-size: 0.85rem; margin-bottom: 0.5rem;">
                        <i class="fas fa-shield-alt"></i> Información encriptada
                    </p>
                    <p style="color: var(--text-color); font-size: 0.85rem; margin: 0;">
                        <i class="fas fa-medal"></i> Garantía de satisfacción
                    </p>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/carrito.js"></script>
}