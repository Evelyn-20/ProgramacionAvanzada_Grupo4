@model Pasteleria.Models.ProductoFormVM
@{
    ViewData["Title"] = "Nuevo producto";
}
<h2>Nuevo producto</h2>
<hr />

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="CrearProducto" method="post" enctype="multipart/form-data" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="NombreProducto" class="form-label"></label>
        <input asp-for="NombreProducto" class="form-control" />
        <span asp-validation-for="NombreProducto" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="IdCategoria" class="form-label"></label>
        <select asp-for="IdCategoria" asp-items="Model.Categorias" class="form-select"></select>
        <span asp-validation-for="IdCategoria" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="PorcentajeImpuesto" class="form-label"></label>
        <input asp-for="PorcentajeImpuesto" class="form-control" />
        <span asp-validation-for="PorcentajeImpuesto" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="DescripcionProducto" class="form-label"></label>
        <textarea asp-for="DescripcionProducto" class="form-control" rows="3" placeholder="Describe el producto..."></textarea>
        <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
    </div>


    <div class="col-md-6">
        <label asp-for="Archivo" class="form-label">Imagen (obligatoria)</label>
        <input asp-for="Archivo" type="file" accept="image/*" class="form-control" />
        <span asp-validation-for="Archivo" class="text-danger"></span>
    </div>

    <div class="col-md-3 form-check mt-4">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label">Activo</label>
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a asp-action="ListadoProductos" class="btn btn-outline-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
