@section Scripts {
    <script>
        // Variables de paginación
        var paginaActual = 1;
        var registrosPorPagina = 5;
        var todasLasFilas = [];

        document.addEventListener('DOMContentLoaded', function() {
            var table = document.getElementById('laTablaDeProductos');
            if (table && table.getElementsByTagName('tbody')[0]) {
                todasLasFilas = Array.from(table.getElementsByTagName('tbody')[0].getElementsByTagName('tr'));
                mostrarPagina(paginaActual);
            }

            // Manejar botones de editar
            var botonesEditar = document.querySelectorAll('.btn-editar');
            botonesEditar.forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var productoId = this.getAttribute('data-id');
                    window.location.href = '@Url.Action("EditarProducto", "Producto")/' + productoId;
                });
            });

            // Manejar botones de detalles
            var botonesDetalles = document.querySelectorAll('[data-bs-target="#modalDetallesProducto"]');
            botonesDetalles.forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var fila = this.closest('tr');
                    var id = fila.cells[0].textContent;
                    var nombre = fila.cells[2].textContent;
                    var categoria = fila.cells[3].textContent;
                    var descripcion = fila.cells[4].textContent;
                    var cantidad = fila.cells[5].textContent;
                    var precio = fila.cells[6].textContent;
                    var impuesto = fila.cells[7].textContent;
                    var estado = fila.cells[8].textContent.trim();

                    document.getElementById('detalles-id').textContent = id;
                    document.getElementById('detalles-nombre').textContent = nombre;
                    document.getElementById('detalles-categoria').textContent = categoria;
                    document.getElementById('detalles-descripcion').textContent = descripcion;
                    document.getElementById('detalles-cantidad').textContent = cantidad;
                    document.getElementById('detalles-precio').textContent = precio;
                    document.getElementById('detalles-impuesto').textContent = impuesto;

                    var estadoBadge = document.getElementById('detalles-estado-badge');
                    estadoBadge.textContent = estado;
                    if (estado === 'Activo') {
                        estadoBadge.className = 'badge bg-success';
                        estadoBadge.style.background = '#27ae60';
                    } else {
                        estadoBadge.className = 'badge bg-danger';
                        estadoBadge.style.background = '#e74c3c';
                    }
                });
            });

            // Manejar botones de eliminar
            var botonesEliminar = document.querySelectorAll('[data-bs-target="#modalEliminarProducto"]');
            botonesEliminar.forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var fila = this.closest('tr');
                    var id = fila.cells[0].textContent;
                    var nombre = fila.cells[2].textContent;
                    var categoria = fila.cells[3].textContent;
                    var descripcion = fila.cells[4].textContent;
                    var cantidad = fila.cells[5].textContent;
                    var precio = fila.cells[6].textContent;
                    var estado = fila.cells[8].textContent.trim();

                    document.getElementById('eliminar-id').value = id;
                    document.getElementById('eliminar-id-display').textContent = id;
                    document.getElementById('eliminar-nombre').textContent = nombre;
                    document.getElementById('eliminar-categoria').textContent = categoria;
                    document.getElementById('eliminar-descripcion').textContent = descripcion;
                    document.getElementById('eliminar-cantidad').textContent = cantidad;
                    document.getElementById('eliminar-precio').textContent = precio;

                    var estadoBadge = document.getElementById('eliminar-estado-badge');
                    estadoBadge.textContent = estado;
                    if (estado === 'Activo') {
                        estadoBadge.className = 'badge bg-success';
                    } else {
                        estadoBadge.className = 'badge bg-danger';
                    }

                    var form = document.getElementById('formEliminarProducto');
                    form.action = '/Producto/EliminarProducto';
                });
            });
        });

        function mostrarPagina(pagina) {
            var inicio = (pagina - 1) * registrosPorPagina;
            var fin = inicio + registrosPorPagina;

            todasLasFilas.forEach(function(row) {
                row.style.display = 'none';
            });

            for (var i = inicio; i < fin && i < todasLasFilas.length; i++) {
                todasLasFilas[i].style.display = '';
            }

            var totalRegistros = todasLasFilas.length;
            var registroInicio = inicio + 1;
            var registroFin = Math.min(fin, totalRegistros);

            document.getElementById('startRecord').textContent = registroInicio;
            document.getElementById('endRecord').textContent = registroFin;
            document.getElementById('totalRecords').textContent = totalRegistros;

            document.getElementById('btnAnterior').disabled = pagina === 1;
            document.getElementById('btnSiguiente').disabled = fin >= totalRegistros;

            if (pagina === 1) {
                document.getElementById('btnAnterior').style.opacity = '0.5';
                document.getElementById('btnAnterior').style.cursor = 'not-allowed';
            } else {
                document.getElementById('btnAnterior').style.opacity = '1';
                document.getElementById('btnAnterior').style.cursor = 'pointer';
            }

            if (fin >= totalRegistros) {
                document.getElementById('btnSiguiente').style.opacity = '0.5';
                document.getElementById('btnSiguiente').style.cursor = 'not-allowed';
            } else {
                document.getElementById('btnSiguiente').style.opacity = '1';
                document.getElementById('btnSiguiente').style.cursor = 'pointer';
            }
        }

        function paginaAnterior() {
            if (paginaActual > 1) {
                paginaActual--;
                mostrarPagina(paginaActual);
            }
        }

        function paginaSiguiente() {
            var totalPaginas = Math.ceil(todasLasFilas.length / registrosPorPagina);
            if (paginaActual < totalPaginas) {
                paginaActual++;
                mostrarPagina(paginaActual);
            }
        }

        // Hover effects para el input de búsqueda
        var searchInput = document.getElementById('searchInput');
        searchInput.addEventListener('focus', function() {
            this.style.borderColor = 'var(--primary-color)';
            this.style.boxShadow = '0 4px 12px rgba(212, 130, 92, 0.2)';
        });
        searchInput.addEventListener('blur', function() {
            this.style.borderColor = 'var(--secondary-color)';
            this.style.boxShadow = 'none';
        });
    </script>
