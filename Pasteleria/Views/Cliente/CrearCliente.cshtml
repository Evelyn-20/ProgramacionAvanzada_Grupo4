@model Pasteleria.Models.ClienteFormVM
@{
    ViewData["Title"] = "Nuevo Cliente";
}
<h2>Nuevo Cliente</h2>
<hr />

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="CrearCliente" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="NombreCliente" class="form-label"></label>
        <input asp-for="NombreCliente" class="form-control" placeholder="Ej: Juan Pérez González" />
        <span asp-validation-for="NombreCliente" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Cedula" class="form-label"></label>
        <input asp-for="Cedula" class="form-control" placeholder="Ej: 1-2345-6789" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" type="email" class="form-control" placeholder="ejemplo@correo.com" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" placeholder="Ej: 8888-8888" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Direccion" class="form-label"></label>
        <textarea asp-for="Direccion" class="form-control" rows="3" placeholder="Dirección completa del cliente..."></textarea>
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Contrasenna" class="form-label">Contraseña (obligatoria)</label>
        <input asp-for="Contrasenna" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
        <span asp-validation-for="Contrasenna" class="text-danger"></span>
    </div>

    <div class="col-md-3 form-check mt-4">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label">Activo</label>
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a asp-action="ListadoClientes" class="btn btn-outline-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
